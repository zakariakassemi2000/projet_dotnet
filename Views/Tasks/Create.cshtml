@model TodoTask

<center><h1 class="mb-4 text-primary fw-bold">📝 Créer une nouvelle tâche</h1>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow rounded-4 border-0">
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Title" class="form-control" placeholder="Titre de la tâche" />
                        <label asp-for="Title">Titre</label>
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <textarea asp-for="Description" class="form-control" placeholder="Description" style="height: 120px;"></textarea>
                        <label asp-for="Description">Description</label>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="DueDate" class="form-control" type="date" placeholder="Date d'échéance" />
                        <label asp-for="DueDate">Date d'échéance</label>
                        <span asp-validation-for="DueDate" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-plus-circle"></i> Créer
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left"></i> Retour à la liste
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
